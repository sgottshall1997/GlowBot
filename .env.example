# Required Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Required AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required Session Configuration
SESSION_SECRET=your_secure_session_secret

# Optional: Google Analytics
VITE_GA_MEASUREMENT_ID=your_ga_measurement_id

# Optional: Additional APIs
PERPLEXITY_API_KEY=your_perplexity_api_key

# ===== AMAZON PA-API MONETIZATION (Required for Affiliate Features) =====
# Get these from your Amazon Associate account at https://associates.amazon.com
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here
AMAZON_PARTNER_TAG=your_amazon_tag_here

# Amazon PA-API Settings (optional - defaults provided)
AMAZON_REGION=us-east-1
AMAZON_API_HOST=webservices.amazon.com
AMAZON_STORE_DOMAIN=www.amazon.com

# ===== CONTENT DISCOVERY APIs (Optional for Enhanced Trends) =====
# Reddit for additional trend discovery
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# ===== PERFORMANCE & CACHING (Optional) =====
# Redis for improved caching (falls back to file cache if not provided)
REDIS_URL=redis://localhost:6379

# ===== MONETIZATION SETTINGS =====
# Default ascsubtag prefix for attribution tracking
MONETIZATION_ASC_SUBTAG_PREFIX=glowbot_

# Frontend default settings (optional)
VITE_DEFAULT_PARTNER_TAG=your_default_tag_here
VITE_ASC_PREFIX=glowbot_

# Make.com Webhook Integration
MAKE_WEBHOOK_URL=https://hook.us2.make.com/your_webhook_url

# Email Service Configuration (CookAIng Marketing Engine)
# Primary: Brevo (Sendinblue)
BREVO_API_KEY=your_brevo_api_key_here

# Fallback: Resend
RESEND_API_KEY=your_resend_api_key_here

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_NAME=Your Company Name

# Link Signing Secret (for email tracking)
LINK_SIGNING_SECRET=your_secure_link_signing_secret_here

# Webhook Security (REQUIRED for production)
BREVO_WEBHOOK_SECRET=your_brevo_webhook_secret_from_dashboard

# Social Media Integration (Buffer)
BUFFER_ACCESS_TOKEN=your_buffer_access_token_from_app_page

# Blog Publishing Integration (Notion)
NOTION_INTEGRATION_TOKEN=your_notion_integration_token
NOTION_BLOG_DB_ID=your_notion_database_id_for_blog

# Push Notifications (OneSignal)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_API_KEY=your_onesignal_rest_api_key